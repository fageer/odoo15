<?xml version="1.0"?>
<odoo>
    <record id="view_forcast_stock_tree" model="ir.ui.view">
        <field name="name">forecast.stock.tree</field>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <tree export_xlsx="false" create="false">
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="quantity"/>
                <field name="available_quantity"/>
                <button name='action_fill_loc' string="Select" class="btn-primary" type='object'/>
            </tree>
        </field>
    </record>

    <record id="action_forcast_stock" model="ir.actions.act_window">
        <field name="name">Forecast Stock</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.quant</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_forcast_stock_tree"/>
        <field name="target">new</field>
    </record>
</odoo>
