<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_branches_tree" model="ir.ui.view">
        <field name="name">branches.tree</field>
        <field name="model">branch.branch</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="responsible_id" widget="many2one_avatar_user"/>
                <field name="location_id"/>
            </tree>
        </field>
    </record>

    <record id="view_branches_form" model="ir.ui.view">
        <field name="name">branches.form</field>
        <field name="model">branch.branch</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div>
                            <h1>
                                <field name="ref" nolabel="1"/>
                            </h1>
                        </div>
                    </group>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="employees_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="responsible_id" widget="many2one_avatar_user"/>
                            <field name="location_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_branches" model="ir.actions.act_window">
        <field name="name">Branches</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">branch.branch</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first branch !
            </p>
        </field>
    </record>


    <menuitem
            id="menu_branches"
            name="Branches"
            action="action_branches"
            parent="menu_branches_root"
            sequence="0"/>

</odoo>
