<odoo>

    <record id="view_crm_lead_form_inherit" model="ir.ui.view">
        <field name="name">crm.lead.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='opportunity_partner']/field[@name='partner_id']" position="after">
                <field name="advertiser_id" />
                <field name="advertisement_type" />
            </xpath>
        </field>
    </record>

    <record id="view_crm_lead_form_inherit_sale" model="ir.ui.view">
        <field name="name">crm.lead.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_sale_quotations_new']" position="after">
                <button name="action_create_quotation" type="object" string="Create Quotation" class="oe_highlight"/>
            </xpath>
            <xpath expr="//button[@name='action_sale_quotations_new']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
