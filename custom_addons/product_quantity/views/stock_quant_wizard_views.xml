<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Custom tree view for stock.quant wizard -->
    <record id="stock_quant_tree_wizard_view" model="ir.ui.view">
        <field name="name">stock.quant.tree.wizard</field>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="location_id"/>
                <field name="product_id"/>
                <field name="quantity" string="On Hand Quantity"/>
                <field name="available_quantity" string="Available Quantity"/>
            </tree>
        </field>
    </record>

    <!-- Action window for the wizard -->
    <record id="action_stock_quant_wizard" model="ir.actions.act_window">
        <field name="name">Product Quantity Wizard</field>
        <field name="res_model">stock.quant</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="product_quantity.stock_quant_tree_wizard_view"/>
        <field name="target">new</field>
    </record>
</odoo>
