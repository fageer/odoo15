<?xml version="1.0" encoding="utf-8"?>
<odoo>


<!--    decoration-success &#45;&#45; Green-->
<!--    decoration-info &#45;&#45; Light Blue-->
<!--    decoration-danger &#45;&#45; Red-->
<!--    decoration-warning &#45;&#45; Orange-->
<!--    decoration-muted &#45;&#45; default-->

    <record id="action_mark_as_done" model="ir.actions.server">
        <field name="name">Mark As Done</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_hospital_appointment"/>
        <field name="binding_model_id" ref="model_hospital_appointment"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            for record in records:
                if record.state == 'in_consultation':
                    record.action_done()
        </field>
    </record>


    <record id="view_hospital_appointment_activity" model="ir.ui.view">
        <field name="name">hospital.appointment.activity</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
             <activity string="Appointments">
                <field name="patient_id"/>
                <field name="ref"/>
                <templates>
                    <div t-name="activity-box">
                        <img t-att-src="activity_image('hospital.patient', 'image', record.patient_id.raw_value)"
                             t-att-title="record.patient_id.value" t-att-alt="record.patient_id.value"/>
                        <div>
                            <field name="ref" display="full"/>
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>


    <record id="view_hospital_appointment_calendar" model="ir.ui.view">
        <field name="name">hospital.appointment.calendar</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Appointments" date_start="booking_date" mode="month" date_delay="duration" color="patient_id"
                        quick_add="False" hide_time="True" form_view_id="%(om_hospital.view_hospital_appointment_form)d"
                        event_open_popup="True" event_limit="4">
                <field name="patient_id" filters="1" avatar_field="image"/>
                <field name="state" filters="1" invisible="1"/>
            </calendar>
        </field>
    </record>

    <record id="view_hospital_appointment_graph" model="ir.ui.view">
        <field name="name">hospital.appointment.graph</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <graph string="Appointments Graph" type="pie">
                <field name="patient_id"/>
                <field name="duration" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'done'"
                  decoration-danger="state == 'cancel'"
                  decoration-warning="state == 'in_consultation'" sample="1" multi_edit="1">
                <header>
                    <button name="action_in_consultation" string="In Consultation" type="object" class="oe_highlight"/>
                </header>
                <field name="ref"/>
                <field name="patient_id" string="Patient Name"/>
                <field name="doctor_id" widget="many2one_avatar_user"/>
                <field name="appointment_time"/>
                <field name="booking_date" decoration-bf="1"/>
                <field name="gender" optional="hide" decoration-it="1" decoration-bf="1" decoration-success="gender=='female'"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="state"
                       widget="badge"
                       decoration-success="state == 'done'"
                       decoration-info="state == 'draft'"
                       decoration-danger="state == 'cancel'"
                       decoration-warning="state == 'in_consultation'"/>
                <button name="action_done" type="object" class="fa fa-check btn-success"
                        attrs=" {'invisible': [('state', '!=', 'in_consultation')]}"/>
                <button name="%(om_hospital.action_cancel_appointment)d" type="action"
                        context="{'default_appointment_id': active_id, 'default_reason': 'test', 'hide_appointment': '1'}"
                        class="fa fa-times btn-danger" attrs=" {'invisible': [('state', 'not in', ('draft', 'in_consultation'))]}"/>
                <field name="total" readonly="1" decoration-bf="1"/>
                <field name="progress" widget="progressbar"/>
            </tree>
        </field>
    </record>


    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <!-- Statusbar -->
                <header>
                    <button name="action_in_consultation" string="In Consultation" data-hotkey="i" type="object" states="draft" class="oe_highlight"/>
                    <button name="action_done" string="Mark As Done" type="object" data-hotkey="v" states="in_consultation" class="oe_highlight"/>
                    <button name="%(om_hospital.action_cancel_appointment)d" string="Cancel" type="action" data-hotkey="z" 
                        context="{'default_appointment_id': active_id,
                                    'default_reason': 'test',
                                    'hide_appointment': '1'}" 
                                    states="draft,in_consultation"/>
                    <!-- <button name="action_cancel" string="Cancel" type="object" data-hotkey="z" 
                        states="draft,in_consultation"/> -->
                    <button name="action_draft" string="Reset To Draft" type="object" data-hotkey="r"
                        states="cancel"/>
                    <!-- options="{'clickable': '1'}" -->
                    <field name="state" widget="statusbar" nolabel="1"/>
                </header>

                <sheet>
                    <div>
                        <h1>
                            <field name="ref"/>
                        </h1>
                        <h2>
                            <field name="priority" widget="priority"/>
                        </h2>
                    </div>


                    <group>
                        <group>
                            <field name="patient_id" default_focus="1"/>
                            <field name="gender"/>
                            <field name="booking_date"/>
                            <field name="duration"/>
                            <field name="doctor_id" widget="many2one_avatar_user"/>
                            <field name="total" readonly="1"/>
                        </group>
                        <group>
                            <field name="hide_sales_price" groups="base.group_no_one"/>
                            <field name="appointment_time"/>
                            <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                            <field name="currency_id" invisible="1" groups="base.group_multi_currency"/>
                            <field name="ref" readonly="1" force_save="1"/>
                            <button name="action_redirect" string="Redirect Button" type="object" class="oe_highlight"
                                    help="This will print a message in the python console" groups="base.group_no_one"
                                    confirm="are you sure you want to go to this url?"/>
                            <button name="%(om_hospital.action_hospital_patient)d" string="Action Button"
                                    confirm="Are you sure you want to open patient action?" type="action" class="oe_highlight"
                                    help="On clicking you will redirect to the patient tree view" groups="base.group_no_one"/>
                        </group>
                    </group>


                    <notebook>
                        <page string="Pharmacy" name="pharmacy">
                            <field name="pharmacy_lines_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="price_unit" widget="monetary"
                                           attrs="{'column_invisible':[('parent.hide_sales_price', '=', True)]}"/>
                                    <field name="qty"/>
                                    <field name="price_subtotal" widget="monetary"/>
                                    <field name="currency_id" invisible="1" groups="base.group_multi_currency"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="price_unit"
                                               attrs="{'column_invisible':[('parent.hide_sales_price', '=', True)]}"/>
                                        <field name="qty"/>
                                    </group>
                                </form>
                            </field>
                            <group name="note_group" class="mt-2 mt-md-0">
                                <group class="oe_subtotal_footer oe_right" name="total">
                                    <label for="total" string="Total"/>
                                    <field name="total" nolabel="1" readonly="1" widget='monetary' decoration-bf="1"/>
                                </group>
                                <div class="oe_clear"/>
                            </group>
                        </page>
                        <page string="Progress" name="progress">
                            <field name="progress" widget="gauge" options="{'style': 'width:100px; height:100px;'}"/>
                        </page>
                        <page string="Prescription" name="prescription">
                            <field name="prescription" placeholder="Enter your prescription"
                                   options="{'collaborative': true, 'resizable': true, 'codeview': true}"/>
                        </page>
                    </notebook>
                </sheet>


                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>

            </form>
        </field>
    </record>


    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>


    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form,calendar,activity,graph</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first appointment !
            </p>
        </field>
    </record>
    <menuitem
            id="menu_appointment"
            name="Appointments"
            action="action_hospital_appointment"
            parent="menu_appointment_master"
            sequence="10"/>

</odoo>
