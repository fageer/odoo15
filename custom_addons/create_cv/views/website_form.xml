<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="menu_create_cv_form_23" model="website.menu">
        <field name="name">Create CV</field>
        <field name="url">/createcv_webform</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">50</field>
    </record>


    <template id="create_cv_23" name="Create CV">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <form role="form" action="/create/webcv" method="POST">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                            <div class="form-group">
                                <label for='name_id' class="control-label">Name</label>
                                <select  name="name_id" id="name_id" class="form-control link-style">
                                    <t t-foreach="partner_records" t-as="partner">
                                        <option t-esc="partner.name" t-att-value="partner.id"/>
                                    </t>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for='email' class="control-label">Email</label>
                                <input  type="email" 
                                        name="email" 
                                        t-att-value="email" 
                                        id="email" 
                                        class="form-control" 
                                        placeholder="Email..." 
                                        required="required"/>
                            </div>

                            <div class="form-group">
                                <label for='phone_number' class="control-label">Phone Number</label>
                                <input  type="text" 
                                        name="phone_number" 
                                        t-att-value="phone_number" 
                                        id="phone_number" 
                                        class="form-control" 
                                        placeholder="Phone Number..." 
                                        required="required"/>
                            </div>

                            <div class="form-group">
                                <label for='job_title' class="control-label">Job</label>
                                <select  name="job_title" id="job_title" class="form-control link-style">
                                    <t t-foreach="job_records" t-as="job">
                                        <option t-esc="job.job_name" t-att-value="job.id"/>
                                    </t>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for='country_id' class="control-label">Country</label>
                                <select  name="country_id" id="country_id" class="form-control link-style">
                                    <t t-foreach="country_records" t-as="country">
                                        <option t-esc="country.name" t-att-value="country.id"/>
                                    </t>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for='city_id' class="control-label">City</label>
                                <select  name="city_id" id="city_id" class="form-control link-style">
                                    <t t-foreach="city_records" t-as="city">
                                        <option t-esc="city.name" t-att-value="city.id"/>
                                    </t>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for='summary' class="control-label">Summary</label>
                                <input  type="text" 
                                        name="summary" 
                                        t-att-value="summary" 
                                        id="summary" 
                                        class="form-control" 
                                        placeholder="Summary..." 
                                        required="required"/>
                            </div>

                            <div class="clearfix oe_login_buttons">
                                <button type="submit" class="btn btn-primary pull-left">Create</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>



    <record id="cv_thanks" model="website.page">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">/cv-thank-you</field>
        <field name="is_published">True</field>
        <field name="key">create_cv.cv_thanks</field>
        <field name="arch" type="xml">
            <t name="Thanks" t-name="create_cv.cv_thanks">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="container">
                            <h1>Thanks!</h1>
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="alert alert-success" role="status">
                                        Your CV Has Been Created Successfully.
                                    </div>
                                    <p> 
                                        Visit Website Any Time.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>

</odoo>