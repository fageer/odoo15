<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_home" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="url">/new/cv</t>
                <t t-set="title">New CV</t>
            </t>
            <t t-call="portal.portal_docs_entry">
                <t t-set="url">/my/cvs</t>
                <t t-set="title">My CVs</t>
                <t t-set="placeholder_count" t-value="'cv_counts'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_breadcrumbs" inherit_id="portal.portal_breadcrumbs">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'cvs_list_view'" class="breadcrumb-item">CVs</li>
            <li t-if="page_name == 'new_cv'" class="breadcrumb-item">New CV</li>
            <li t-if="page_name == 'cvs_form_view'" class="breadcrumb-item">
                <a href="/my/cvs">cvs</a> / <span class="text-muted" t-out="cv.ref"/>
            </li>
        </xpath>
    </template>

    <template id="new_cv_form_view_portal" name="Create CV">
        <t t-call="portal.portal_layout">
            <t t-call="portal.portal_table">
                <div class="alert alert-success" role="alert" t-if="success_msg">
                  <t t-out="success_msg"/>
                </div>
                <t t-foreach="error_list" t-as="error">
                    <div class="alert alert-danger" role="alert">
                      <t t-out="error"/>
                    </div>
                </t>

                <form method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <h1 style="color: #114B5F; font-size:20px; margin:10px 0;">General Informations</h1>

                    <div class="input-group mb-3">
                        <label for='image' class="input-group-text">Upload Image</label>
                        <input type="file" name="image" id="image" multiple="true" data-show-upload="true"
                               data-show-caption="true" data-show-preview="true" class="form-control"/>
                    </div>

                    <div class="form-group">
                        <label for='name_id' class="control-label">Name</label>
                        <select  name="name_id" id="name_id" class="form-control link-style">
                            <option t-esc="current_partner.name" t-att-value="current_partner.id" selected="selected"/>
                            <t t-foreach="partner_records" t-as="partner">
                                <option t-esc="partner.name" t-att-value="partner.id"/>
                            </t>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for='email' class="control-label">Email</label>
                        <input type="email" name="email" t-att-value="current_partner.email" id="email" class="form-control" placeholder="Email..." required="required"/>
                    </div>

                    <div class="form-group">
                        <label for='phone_number' class="control-label">Phone Number</label>
                        <input type="text" name="phone_number" t-att-value="current_partner.phone" id="phone_number" class="form-control" placeholder="Phone Number..." required="required"/>
                    </div>

                    <div class="form-group">
                        <label for='job_title' class="control-label">Job</label>
                        <select  name="job_title" id="job_title" class="form-control link-style">
                            <t t-foreach="job_records" t-as="job">
                                <option t-esc="job.job_name" t-att-value="job.id"/>
                            </t>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for='country_id' class="control-label">Country</label>
                        <select  name="country_id" id="country_id" class="form-control link-style">
                            <option t-esc="current_partner.country_id.name" t-att-value="current_partner.id" selected="selected"/>
                            <t t-foreach="country_records" t-as="country">
                                <option t-esc="country.name" t-att-value="country.id"/>
                            </t>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for='city_id' class="control-label">City</label>
                        <select name="city_id" id="city_id" class="form-control link-style">
                            <option t-esc="current_partner.state_id.name" t-att-value="current_partner.id" selected="selected"/>
                            <t t-foreach="city_records" t-as="city">
                                <option t-esc="city.name" t-att-value="city.id"/>
                            </t>
                        </select>
                    </div>

                    <div class="input-group">
                      <span class="input-group-text">Summary</span>
                      <textarea style="resize: none;" cols="5" rows="5" class="form-control" aria-label="With textarea" t-att-value="summary" name="summary" id="summary"/>
                    </div>

                    <h1 style="color: #114B5F; font-size:20px; margin:10px 0;">Personal Informations</h1>
                    <div class="form-group">
                        <label for='skills_ids' class="control-label">Skills</label>
                        <select name="skills_ids" id="skills_ids" class="js-example-basic-multiple col-xl-6 mb-1 new-get_data" multiple="multiple">
                            <t t-foreach="skill_records" t-as="skill">
                                <option t-att-value="skill.id"><t t-esc="skill.skill_name"/></option>
                            </t>
                        </select>
                    </div>

                    <h1 style="color: #114B5F; font-size:20px; margin:10px 0;">Experience</h1>
                    <div id="experience_fields">
                        <div class="experience_block mt-3" >
                            <div class="row">
                                <div class="form-group col-6">
                                    <label for='company_name_1' class="control-label">Company Name</label>
                                    <input type="text" name="company_name_1" id="company_name_1" class="form-control" placeholder="Company Name..."/>
                                </div>
                                <div class="form-group col-6">
                                    <label for='job_position_1' class="control-label">Job Position</label>
                                    <select name="job_position_1" id="job_position_1" class="form-control link-style">
                                        <t t-foreach="job_records" t-as="job">
                                            <option t-esc="job.job_name" t-att-value="job.id"/>
                                        </t>
                                    </select>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-6">
                                    <label for='experience_start_date_1' class="control-label text-muted">From</label>
                                    <input type="date" name="experience_start_date_1" id="experience_start_date_1" class="form-control"/>
                                </div>
                                <div class="form-group col-6">
                                    <label for='experience_end_date_1' class="control-label text-muted">To</label>
                                    <input type="date" name="experience_end_date_1" id="experience_end_date_1" class="form-control"/>
                                </div>
                            </div>

                            <div class="input-group">
                              <span class="input-group-text">Experience Summary</span>
                              <textarea style="resize: none;" cols="5" rows="5" class="form-control" aria-label="With textarea" name="experience_summary_1" id="experience_summary_1"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="button" id="add_experience" class="btn btn-secondary mt-3">Add Experience</button>
                    </div>


                    <div class="form-group">
                        <div>
                            <button type="submit" class="btn btn-success mt-3">Create CV</button>
                        </div>
                    </div>
                </form>
            </t>
        </t>
        <script type="text/javascript">
            let experienceCount = 1;

            document.getElementById('add_experience').addEventListener('click', function() {
                experienceCount++;
                let newBlock = document.querySelector('.experience_block').cloneNode(true);

                newBlock.querySelectorAll('input, select, textarea').forEach(function(el) {
                    let newId = el.id.replace(/\d+$/, experienceCount);
                    let newName = el.name.replace(/\d+$/, experienceCount);
                    el.id = newId;
                    el.name = newName;
                    el.value = '';  // Clear the value
                });

                document.getElementById('experience_fields').appendChild(newBlock);
            });
        </script>
    </template>

    <template id="cvs_list_view_portal">
            <t t-call="portal.portal_layout">
                <t t-call="portal.portal_table">
                    <thead>
                        <tr>
                            <th> Reference</th>
                            <th> Name</th>
                            <th> Email</th>
                            <th> Phone Number</th>
                        </tr>
                    </thead>

                    <tbody>
                        <t t-foreach="cvs" t-as="cv">
                            <tr>
                                <td>
                                    <a t-attf-href="/my/cv/#{cv.id}">
                                        <t t-out="cv.ref"/>
                                    </a>
                                </td>
                                <td>
                                    <t t-out="cv.name_id.name"/>
                                </td>
                                <td>
                                    <t t-out="cv.name_id.email"/>
                                </td>
                                <td>
                                    <t t-out="cv.name_id.phone"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </t>
            </t>
    </template>

    <template id="cvs_form_view_portal" inherit_id="portal.portal_sidebar">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-if="page_name == 'cvs_form_view'">
                <section style="background-color: #eee;">
                    <div class="container py-5">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="card mb-4">
                                    <div class="card-body text-center">
                                        <img t-att-src="'data:image/png;base64,%s' % to_text(cv.name_id.image_1920)"
                                             alt="avatar" class="rounded-circle img-fluid" style="width: 150px;" />
                                        <div class="d-flex justify-content-center mb-2">
                                            <button type="button" class="btn btn-primary mt-3">
                                                <a t-attf-href="/my/cv/print/{{cv.id}}" class="fa fa-download" style="color: white;"> Download Cv</a>
                                            </button>
                                        </div>
                                        <h5 class="my-3"><t t-out="cv.name_id.name"/></h5>
                                        <p class="text-muted mb-1"><t t-out="cv.job_title.job_name"/></p>
                                        <p class="text-muted mb-1">
                                            <t t-out="cv.name_id.email"/>
                                        </p>
                                        <p class="text-muted mb-4">
                                            <t t-out="cv.name_id.phone"/>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Reference</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0"><t t-out="cv.ref"/></p>
                                            </div>
                                        </div>
                                        <hr/>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Name</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0"><t t-out="cv.name_id.name"/></p>
                                            </div>
                                        </div>
                                        <hr/>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Email</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0"><t t-out="cv.name_id.email"/></p>
                                            </div>
                                        </div>
                                        <hr/>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Phone Number</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0"><t t-out="cv.name_id.phone"/></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </t>
        </xpath>
    </template>

</odoo>
